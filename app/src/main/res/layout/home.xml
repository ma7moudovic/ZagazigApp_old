<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/app_background"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dp"
            android:layout_weight=".5">

            <ImageButton
                android:id="@+id/btnsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/custombackgroundbutton"
                android:gravity="right"
                android:src="@android:drawable/ic_menu_search"
                android:textColor="@color/white"></ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:minHeight="0dp"
                android:spinnerMode="dropdown"
                android:textColor="@color/white"></Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <EditText
                android:id="@+id/etsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="3dp"
                android:background="@drawable/custombackgroundbutton"
                android:gravity="right|center"
                android:hint="بحث ..."
                android:padding="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_above="@+id/LinearLayout02"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:layout_below="@id/rel1"
            android:orientation="vertical"
            android:weightSum="12">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/relbtn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="2.5sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.5"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_cat_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/cat_rest"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2.5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.5"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_cat_11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/cat_khorogat"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="2.5sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.5"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_cat_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/cat_afrah"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"

                        android:textSize="20sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2.5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.5"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_cat_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/cat_anaka"
                        android:gravity="center"
                        android:paddingBottom="10dp"

                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />


                </RelativeLayout>
            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="2.5sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.5"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_cat_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/cat_khadmat"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"

                        android:textSize="20sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2.5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.5"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_cat_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/cat_sahawegamal"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                </RelativeLayout>
            </TableRow>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">
