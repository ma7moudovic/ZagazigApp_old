<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/catfive"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sharkawy.zagazigapp.activities.FavorivtesActivity"
    tools:showIn="@layout/activity_favorivtes">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cr_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cr_sp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerListView_favList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp">
        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

</RelativeLayout>
